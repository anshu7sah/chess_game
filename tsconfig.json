{
  "compilerOptions": {
    "target": "ES2020", // or ES2022, ESNext â€“ depends on Node version
    "module": "ESNext", // important: ensures ESM output
    "moduleResolution": "node", // resolves node-style imports
    "esModuleInterop": true, // allows default import from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // compiled files output here
    "rootDir": "./src" // your source files
    // "baseUrl": "./",
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
